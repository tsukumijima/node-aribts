{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "ES2022",
    "lib": [
      "ESNext",
    ],
    "removeComments": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "incremental": true,
    "outDir": "lib",
    "rootDir": "src"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
